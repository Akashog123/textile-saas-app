# SE-Textile Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Core Application Settings
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
FLASK_ENV=development
DEBUG=True

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-different-from-secret-key
JWT_EXPIRATION_DAYS=7

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_LETTER=True
PASSWORD_REQUIRE_NUMBER=True

# Database
DATABASE_URL=sqlite:///instance/se_textile.db

# AI Services
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Map Services
MAPMYINDIA_KEY=your-mapmyindia-api-key-here

# File Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH_MB=16

# Server
PORT=5001

# Image Serving Configuration
# For development, use localhost. For production, use your actual domain.
# Example production: https://api.yourdomain.com
API_BASE_URL=http://127.0.0.1:5001

# Placeholder image settings
PLACEHOLDER_IMAGE_SERVICE=https://placehold.co
USE_PLACEHOLDER_IMAGES=True

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
