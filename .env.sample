# FLASK CONFIGURATION
FLASK_ENV=development
FLASK_APP=app.py
DEBUG=True
SECRET_KEY=replace-with-secure-secret

# SERVER SETTINGS
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# DATABASE SETTINGS
# Local SQLite (default)
DATABASE_URL=sqlite:///se_textile.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# (Optional for production)
# DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/se_textile

# JWT AUTHENTICATION
JWT_SECRET_KEY=replace-with-jwt-secret
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# AI INTEGRATION
# Gemini API (for AI captions, summaries, and forecasting)
GEMINI_API_KEY=your-gemini-api-key

# MAPMYINDIA API
# For professional geolocation & nearby search
MAPMYINDIA_KEY=your-mapmyindia-rest-api-key

# SUPABASE (Optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# EMAIL / CONTACT (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# FILE UPLOAD SETTINGS
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH_MB=16
ALLOWED_EXTENSIONS=csv,xlsx,xls,jpg,jpeg,png,pdf

# FRONTEND SETTINGS
FRONTEND_URL=http://localhost:5173
API_VERSION=v1

# FORECASTING SETTINGS
FORECAST_DAYS=30
PROPHET_SEASONALITY=weekly

# LOGGING / MONITORING
LOG_LEVEL=INFO
