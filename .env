# ──────────────── FLASK CONFIGURATION ────────────────
FLASK_ENV=development
FLASK_APP=app.py
DEBUG=True
SECRET_KEY=your-very-secure-secret-key

# ──────────────── SERVER SETTINGS ────────────────
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ──────────────── DATABASE SETTINGS ────────────────
# Local SQLite (default)
DATABASE_URL=sqlite:///se_textile.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# (Optional for production)
# DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/se_textile

# ──────────────── JWT AUTHENTICATION ────────────────
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600       # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=86400     # 1 day

# ──────────────── AI INTEGRATION ────────────────
# Gemini API (for AI captions, summaries, and forecasting)
GEMINI_API_KEY=AIzaSyAOsLSbTt2P1YUDk855KBzg6hbZVfMqe0M

# ──────────────── MAPMYINDIA API ────────────────
# For professional geolocation & nearby search
MAPMYINDIA_KEY=your_mapmyindia_rest_api_key_here

# ──────────────── SUPABASE (Optional) ────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_service_role_key

# ──────────────── EMAIL / CONTACT (Optional) ────────────────
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# ──────────────── FILE UPLOAD SETTINGS ────────────────
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH_MB=16
ALLOWED_EXTENSIONS=csv,xlsx,xls,jpg,jpeg,png,pdf

# ──────────────── FRONTEND SETTINGS ────────────────
FRONTEND_URL=http://localhost:5173
API_VERSION=v1

# ──────────────── FORECASTING SETTINGS ────────────────
FORECAST_DAYS=30
PROPHET_SEASONALITY=weekly

# ──────────────── LOGGING / MONITORING ────────────────
LOG_LEVEL=INFO
