# FLASK CONFIGURATION
FLASK_ENV=development
FLASK_APP=app.py
DEBUG=True
SECRET_KEY=replace-with-secure-secret-min-32-chars

# SERVER SETTINGS
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# DATABASE SETTINGS
# Local SQLite (default) - stored in backend/instance/
DATABASE_URL=sqlite:///instance/se_textile.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# For production (PostgreSQL recommended)
# DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/se_textile

# JWT AUTHENTICATION
JWT_SECRET_KEY=replace-with-jwt-secret-different-from-secret-key
JWT_EXPIRATION_DAYS=7
JWT_ALGORITHM=HS256

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_LETTER=True
PASSWORD_REQUIRE_NUMBER=True

# AI INTEGRATION
# AI Provider: "nvidia" or "gemini"
AI_PROVIDER=nvidia

# NVIDIA API (Default Provider)
NVIDIA_API_KEY=nvapi-YOUR-NVIDIA-API-KEY-HERE

# NVIDIA Model Configuration
AI_TEXT_MODEL=deepseek-ai/deepseek-r1
AI_IMAGE_MODEL=black-forest-labs/flux.1-kontext-dev
AI_VISION_MODEL=meta/llama-3.2-90b-vision-instruct

# Gemini API (Alternative Provider)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI API (Optional)
OPENAI_API_KEY=your-openai-api-key

# MAPMYINDIA API
# For professional geolocation & nearby search
MAPMYINDIA_KEY=your-mapmyindia-rest-api-key

# SUPABASE (Optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# IMAGE SERVING CONFIGURATION
# For development: http://127.0.0.1:8000
API_BASE_URL=http://127.0.0.1:8000
PLACEHOLDER_IMAGE_SERVICE=https://placehold.co
USE_PLACEHOLDER_IMAGES=True

# EMAIL / CONTACT (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# FILE UPLOAD SETTINGS
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH_MB=16
ALLOWED_EXTENSIONS=csv,xlsx,xls,jpg,jpeg,png,pdf

# DATA DIRECTORY (for sales data, FAISS index, etc.)
DATA_DIR=instance

# FAISS INDEX PATH (for image similarity search)
FAISS_INDEX_PATH=instance/faiss/index.faiss

# FRONTEND SETTINGS
FRONTEND_URL=http://localhost:5173
API_VERSION=v1

# FORECASTING SETTINGS
FORECAST_DAYS=30
PROPHET_SEASONALITY=weekly

# LOGGING / MONITORING
LOG_LEVEL=INFO

# TESTING
TESTING=False
